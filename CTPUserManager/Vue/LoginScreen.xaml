<Window x:Class="CTPUserManager.Vue.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CTPUserManager.Vue"
        mc:Ignorable="d"
        Title="CesiTonPlatUserManager" Height="450" Width="450" FontSize="15" Background="#5C88DA">
    <Border Background="#2e3137" CornerRadius="20" Margin="20,20,20,10">
        <StackPanel Margin="30">
            <Label Content="Identification" Foreground="White" FontSize="27" HorizontalAlignment="Center"></Label>
            <Label Margin="15,0,0,0" Content="Identifiant" Foreground="White"></Label>
            <TextBox x:Name="usrname" Margin="15,0,15,5" Background="#545d6a" Foreground="White" FontSize="25"></TextBox>
            <Label Margin="15,0,0,0" Content="Mot De Passe" Foreground="White"></Label>
            <PasswordBox x:Name="usrpsw" Margin="15,0,15,5" Background="#545d6a" Foreground="White" FontSize="25"></PasswordBox>

            <Button  x:Name="btnConnect" Click="BtnConnect_Click" Content="Connexion" Foreground="White" FontSize="25" Margin="97,10" Height="42" Background="#545d6a"/>
            <Image  Source="/Images/unnamed.png" Height="73" HorizontalAlignment="Center" Margin="50,0,50,0" Width="197"  />
        </StackPanel>
    </Border>
</Window>
